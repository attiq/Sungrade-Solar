<h1>Appointments</h1>


<div id="calendar"></div>
<br>

<%= link_to 'New Appointment', new_appointment_path %>


<script>

    $('#calendar').fullCalendar({
        events: '/appointments.json',
        header: {
            left: 'prev,next today',
            center: 'title',
            right: 'month,agendaWeek,agendaDay'
        },
        defaultView: 'agendaWeek'
    });

</script>